<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Shift Management Helper</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<div id="banner">
    <img src="D:\Peter\ElevenFiftyProjects\DoNetProjects\SMH\ShiftManagementHelper\SMH_Logo.png" class="col-md-2" id="logo"/>
    @Html.Partial("_LoginPartial")
</div>
<body>
    <div class="navbar navbar-inverse" id="menubar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Shift Management Helper", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" id="layoutmenu">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Workers", "Index", "Worker")</li>
                    <li>@Html.ActionLink("Positions", "Index", "Position")</li>
                    <li>@Html.ActionLink("Shifts", "Index", "Shift")</li>
                    <li>@Html.ActionLink("Shift Assignments", "Index", "PositionAssignment")</li>
                </ul>
            </div>
        </div>
    </div>
    <div id="trialdiv">

    </div>
    <div>
        <div class="container body-content" id="sharedbody">
            @RenderBody()
            <hr />
        </div>
    </div>
        <footer>
            <p>&copy; @DateTime.Now.Year - Created by Peter Astle</p>
        </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


