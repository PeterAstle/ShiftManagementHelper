@model IEnumerable<ShiftManagementHelper.Models.Positions.PositionListItem>

@{
    ViewBag.Title = "Index";
}

<h2 class="indexHeader"> Position Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="position_table" class="display">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PositionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PositionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>Available Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PositionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PositionId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PositionId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PositionId })
            </td>
        </tr>
    }
        </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('#position_table').DataTable();
    });</script>